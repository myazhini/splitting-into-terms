import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) {
        Scanner sc= new Scanner(System.in);
        float Pamt=sc.nextFloat();
        float ROI=sc.nextFloat();
        float Yrs=sc.nextFloat();
        float interest=((Pamt*ROI*Yrs)/100);
        float amount=Pamt+interest;
        float discount=((2*interest)/100);
        float finalSettlement=amount-discount;
        System.out.println(String.format("%.2f",interest));
        System.out.println(String.format("%.2f",amount));
        System.out.println(String.format("%.2f",discount));
        System.out.println(String.format("%.2f",finalSettlement));
    }
}
